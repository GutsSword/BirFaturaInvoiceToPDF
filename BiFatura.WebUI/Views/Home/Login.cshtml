@model BiFatura.WebUI.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BiFatura.WebUI.styles.css" asp-append-version="true" />
    <link href="~/css/login.css" rel="stylesheet" />

    <title>Bir Fatura Giriş Ekranı</title>
    
</head>
<body>
    <div class="container">
        <div class="login-container">
            <h2 class="login-title">Giriş Yap</h2>
            <form method="post" asp-action="Login" asp-controller="Home">
                <div class="form-group">
                    <label asp-for="Username" class="control-label">Kullanıcı Adı</label>
                    <input type="email" asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Şifre</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Şifre" />
                </div>
                <br />
                <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
            </form>
        </div>
    </div>
</body>
</html>