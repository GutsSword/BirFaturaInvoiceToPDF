@model BiFatura.WebUI.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

</head>
<body class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow-lg text-center" style="width: 350px;">
     
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTn053rG5U4N1-1zA845PIDTFEVzwP9yzGxOA&s" alt="Logo" class="mb-3" style="width: 100px; height: auto;">

        <h3 class="mb-3">Giriş Yap</h3>
        <br />
        <form method="post" asp-action="Login" asp-controller="Home">
            <div class="mb-3">
                <label class="form-label"=>Kullanıcı Maili</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                    <input type="email" asp-for=Username class="form-control" value="test@test.com" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="text" asp-for=Password class="form-control" value="Test123." required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        </form>
    </div>
</body>
</html>
